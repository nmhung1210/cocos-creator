CCEffect %{
  techniques:
  - name: opaque
    passes:
    - vert: unlit-vs
      frag: unlit-fs
      depthStencilState:
        depthTest: true
        depthWrite: true
      blendState:
        targets:
        - blend: true
      rasterizerState:
        cullMode: none
      properties:
        diffuseTexture: { value: white }
        diffuseColor: { value: [1, 1, 1, 1], editor: { type: color } }
        alphaThreshold: { value: 0.5 }
        mainTiling: { value: [1, 1] }
        mainOffset: { value: [0, 0] }
  - name: transparent
    passes: 
      - stage: transparent
        vert: unlit-vs
        frag: unlit-fs
        depthStencilState:
          depthTest: true
          depthWrite: true
        blendState:
          targets:
          - blend: true
        rasterizerState:
          cullMode: none
        properties:
          diffuseTexture: { value: white }
          diffuseColor: { value: [1, 1, 1, 1], editor: { type: color } }
          alphaThreshold: { value: 0.5 }
          mainTiling: { value: [1, 1] }
          mainOffset: { value: [0, 0] }
}%

